 # resources/skins/default/720p/WizardStep1.xml
#  - Step 1: Choose scan or manual
<window>
    <control type="label" id="1">
        <posx>0</posx>
        <posy>0</posy>
        <width>1280</width>
        <height>720</height>
        <label>Welcome to the Kodi MySQL Wizard!</label>
    </control>
    <control type="button" id="2">
        <posx>100</posx>
        <posy>100</posy>
        <width>200</width>
        <height>50</height>
        <label>Scan for existing databases</label>
    </control>
    <control type="button" id="3">
        <posx>100</posx>
        <posy>200</posy>
        <width>200</width>
        <height>50</height>
        <label>Create a new database manually</label>
    </control>
    <control type="button" id="4">
        <posx>100</posy>300</posy>
        <width>200</width>
        <height>50</height>
        <label>Exit Wizard</label>
    </control>
    <control type="label" id="5">
        <posx>0</posx>
        <posy>400</posy>
        <width>1280</width>
        <height>50</height>
        <label>Choose an option to proceed.</label>
    </control>
    <control type="image" id="6">
        <posx>0</posx>
        <posy>0</posy>
        <width>1280</width>
        <height>720</height>
        <texture>background.png</texture>
    </control>
</window>
